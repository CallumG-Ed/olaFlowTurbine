FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setExprFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
#include "../setup"

expressions
(
    U
    {
        field       U;
        dimensions  [0 1 -1 0 0 0 0];

        constants
        {
            water_level $freeSurface;
            u_inf $U_mean;
        }

        variables
        (
            "alpha = 7.0"
            "beta = 0.4"
            "height = pos().z()"
        );

        condition
        #{
            pos().z() < $[constants.water_level]
        #};

        expression
        #{
            vector(pow($[constants.u_inf]*(height/(beta*$[constants.water_level])),(1/alpha)),0,0)
        #};
    }
);


// ************************************************************************* //
